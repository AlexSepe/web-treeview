<?xml version="1.0" encoding="utf-8"?>
<widget id="truechange.webtreeview.WebTreeview" pluginWidget="true" needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Web Treeview</name>
    <description>TrueChange wrapper for react-arborium treeview</description>
    <icon />
    <properties>        
        <propertyGroup caption="General">
            <property key="rootDs" type="datasource" isList="true">
                <caption>Datasource</caption>
                <description />
            </property>

            <property key="nodeID" type="attribute" dataSource="rootDs" required="true">
                <caption>Node ID</caption>
                <description>Node ID</description>
                <attributeTypes>
                    <attributeType name="AutoNumber" />
                    <attributeType name="Integer" />
                    <attributeType name="Long" />
                    <attributeType name="String" />
                </attributeTypes>
            </property> 

            <property key="parentID" type="attribute" dataSource="rootDs" required="true"> 
                <caption>Parent ID</caption>
                <description>Parent ID</description>
                <attributeTypes>
                    <attributeType name="AutoNumber" />
                    <attributeType name="Integer" />
                    <attributeType name="Long" />
                    <attributeType name="String" />
                </attributeTypes>
            </property> 

            <property key="captionText" type="textTemplate" dataSource="rootDs" required="true"> 
                <caption>Caption</caption>
                <description>Caption</description>
            </property> 

            <property key="isFolder" type="expression" dataSource="rootDs" required="false">
                <caption>Is Folder</caption>
                <description>Indicates if its a folder (Lazy loaded required)</description>
                <returnType type="Boolean" />
            </property> 

             <property key="content" type="widgets" required="false" dataSource="rootDs">
                <caption>Content</caption>
                <description>Widgets using data source</description>
            </property>            

            <property key="selection" type="selection" dataSource="rootDs"
                defaultValue="Single">
                <caption>Selection</caption>
                <description />
                <selectionTypes>                    
                    <selectionType name="Single" />
                    <selectionType name="Multi" />
                </selectionTypes>
            </property>
        </propertyGroup>
        <propertyGroup caption="Events">
            <property key="onChangeDatabaseEvent" type="action" required="false">
                <caption>On Selection change</caption>
                <description />
            </property>
        </propertyGroup>

        <propertyGroup caption="Customization">
            <property key="showControllers" type="boolean" defaultValue="true">
                <caption>Show controllers</caption>
                <description>Shows search, expand and collapse buttons in the controller bar</description>                                
            </property> 
            <property key="openExpanded" type="boolean" defaultValue="false">
                <caption>Open expanded</caption>
                <description>Expands all nodes on load</description>                                
            </property> 
        </propertyGroup>
    </properties>
</widget>